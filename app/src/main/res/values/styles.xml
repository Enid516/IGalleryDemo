<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AnimationTheme</item>
    </style>

    <style name="AnimationTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_open_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_open_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_close_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_close_out_to_right</item>
    </style>

</resources>
